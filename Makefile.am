@SET_MAKE@
ACLOCAL_AMFLAGS = -I m4

SUBDIRS = \
	panel-plugin \
	flags \
	po \
	icons

distclean-local:
	rm -rf *.cache *~

.PHONY: ChangeLog

ChangeLog: 
	(GIT_DIR=$(top_srcdir)/.git git log > .changelog.tmp \
	&& mv .changelog.tmp ChangeLog; rm -f .changelog.tmp) \
	|| (touch ChangeLog; echo 'Git directory not found: installing possibly empty changelog.' >&2)

dist-hook: ChangeLog

EXTRA_DIST =								\
	README								\
	intltool-extract.in						\
	intltool-merge.in						\
	intltool-update.in

DISTCLEANFILES =							\
	intltool-extract						\
	intltool-merge							\
	intltool-update


